# ===========================================
# GuardianEye Backend Configuration
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# Options: 'sqlite' or 'postgres'
DB_TYPE=sqlite

# SQLite Configuration (for local development)
DB_PATH=./src/guardian-eye.db

# PostgreSQL Configuration (for production/cloud)
# Get credentials from Supabase or your PostgreSQL provider
PG_HOST=db.xxxxx.supabase.co
PG_PORT=5432
PG_USERNAME=postgres
PG_PASSWORD=your-secure-password-here
PG_DATABASE=postgres
PG_SSL=true

# Database Debug (optional)
DB_LOGGING=false
